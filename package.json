{
  "name": "react-scroll",
  "version": "0.2.0",
  "description": "Reactive Scrolling",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf dist lib && mkdir dist lib",
    "prebuild": "npm run clean",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "NODE_ENV=production webpack src/index.js dist/react-scroll.js",
    "build:umd:min": "NODE_ENV=production TARGET=minify webpack src/index.js dist/react-scroll.min.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "dev": "webpack-dev-server demo/index.jsx --content-base demo/ --devtool eval --inline --hot --progress --colors",
    "prepublish": "npm run clean && npm run build",
    "test": "NODE_ENV=production mocha --compilers js:babel-core/register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monteirocode/react-scroll.git"
  },
  "keywords": [
    "react",
    "react-motion",
    "scroll"
  ],
  "author": "Eddie Monteiro <monteirocode@gmail.com> (http://github.com/monteirocode)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/monteirocode/react-scroll/issues"
  },
  "homepage": "https://github.com/monteirocode/react-scroll#readme",
  "dependencies": {},
  "peerDependencies": {
    "react": ">=0.14.0",
    "react-dom": ">=0.14.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "mocha": "^3.0.2",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-motion": "^0.4.4",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  }
}
